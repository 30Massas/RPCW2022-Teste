extends layout

block content
  h1.w3-center= data.titulo
  .w3-container.w3-margin.w3-center
    h3 Descrição:
    b= data.descricao
  .w3-container.w3-margin
    if data.filhos.length != 0
      h4.w3-center Filhos  
      table.w3-table-all
        tr
          th.w3-center.w3-green Código
          th.w3-center.w3-green Título
        each f in data.filhos
          tr
            td.w3-center
              a(href="/classes/"+f.codigo)= f.codigo
            td.w3-center= f.titulo
    - if(data.nivel==3)
      h4.w3-center Termos
      table.w3-table-all
        each t in data.termosInd
          tr
            td.w3-center
              a(href="/termos")= t.termo
  .w3-container.w3-margin
    .w3-footer
        a.w3-left(href="/") Página Inicial
        a.w3-right(href=prev) Página Anterior